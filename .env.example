# OpenRouter API Key for Gemini Flash 2.0 access
OPENROUTER_API_KEY=your_openrouter_api_key_here

# SendGrid API Key for email delivery (optional)
# Get from: https://app.sendgrid.com/settings/api_keys
# Format: SG.xxxxxxxxxxxxxxxxxx.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Optional: Site information for OpenRouter rankings
OPENROUTER_SITE_URL=https://yoursite.com
OPENROUTER_SITE_NAME=ArXiv Daily Digest

# Optional: From email address (must be verified in SendGrid)
# Default: digest@artefact.ai
FROM_EMAIL=your-verified-sender@yourdomain.com